{
  "name": "dynamic_web_lab",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "prestart": "powershell -Command \"$processId = (Get-NetTCPConnection -LocalPort 3000 -ErrorAction SilentlyContinue).OwningProcess; if ($processId) { Stop-Process -Id $processId -Force }\"",

    "start": "node src/app.js",
    "test": "jest",
    "cypress:run": "npx wait-on http://localhost:3000 && cypress run",
    "test:e2e": "npm run start & npm run cypress:run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Làm quen với ứng dụng web động",
  "dependencies": {
    "chromedriver": "^130.0.2",
    "express": "^4.21.1",
    "selenium-webdriver": "^4.26.0"
  },
  "devDependencies": {
    "cypress": "^13.15.1",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "wait-on": "^8.0.1"
  },
  "directories": {
    "test": "test"
  }
}
